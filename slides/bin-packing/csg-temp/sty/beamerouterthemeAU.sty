\mode<presentation>

% header
\defbeamertemplate*{frametitle}{AU}[1][]
{   \ifx\insertframesubtitle\@empty%
    {
%\colorbox{yellow}{%
        \begin{beamercolorbox}[wd=0.8\paperwidth,ht=0.85cm,leftskip=0.0cm,#1]{frametitle}
            \usebeamerfont{frametitle}\insertframetitle\par%
        \end{beamercolorbox}
%}
    }%
    \else%
    {   \vspace{0.15cm}
%\colorbox{blue}{%
        \begin{beamercolorbox}[wd=0.8\paperwidth,ht=0.85cm,leftskip=0.0cm,#1]{frametitle}
            {\linespread{0.9}\usebeamerfont{frametitle}\insertframetitle\par}%
            {\linespread{0.9}\usebeamerfont{framesubtitle}\normalsize \insertframesubtitle\par}%
        \end{beamercolorbox}
%}    
    }%
    \fi
}

% footer
\defbeamertemplate*{footline}{AU}[1][]
{   \ifnum\thepage>1\relax%
    {   \ifinsectionframe{}
        \else%
        {   \ifinhighlightframe{}
            \else
            {  
                % Adapted to 16:9 widescreen
                \begin{tikzpicture}[remember picture,overlay]
                    \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
                    \node[text width=0.40\paperwidth,anchor=base west] at (0.25\paperwidth,0.25cm){%
                         %\usebeamercolor{title in head/foot}\beamer@shorttitle
                         \textcolor{white}{\normalsize \beamer@shorttitle}
                    };
                    \node[text width=0.20\paperwidth,anchor=base west] at (0.70\paperwidth,0.25cm){%
                         %\usebeamercolor{author in head/foot}\insertshortauthor
                         \textcolor{white}{\normalsize \insertshortauthor}
                    };
                    \node[text width=0.20\paperwidth,anchor=base west] at (0.65\paperwidth,0.25cm){%
                         %\usebeamercolor{date in head/foot}\insertshortdate
                         \textcolor{white}{\normalsize \insertshortdate}
                    };
                    \node[text width=0.10\paperwidth,anchor=base west, align=right] at (0.88\paperwidth,0.25cm){%
                         %\usebeamercolor{title in head/foot}\insertframenumber/\inserttotalframenumber
                         \textcolor{white}{\normalsize \insertframenumber/\inserttotalframenumber}
                    };
                \end{tikzpicture}
            }
            \fi
        }
        \fi
    }
    \fi
}

% section page
\defbeamertemplate*{section page}{AU}[1][]
{   \begin{tikzpicture}[remember picture]
        \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
        \node[anchor=south west] at (-0.5cm,0.525\paperheight){%
            \usebeamerfont{section name}\color{titleCol}\sectionname~\insertsectionnumber\par%
        };
        \node[text width=13.5cm,anchor=north west] at (-0.5,0.49\paperheight) {%
            \linespread{0.7}\usebeamerfont{title}\color{titleCol}\secname\par%
        };
    \end{tikzpicture}
}

% highlight page
\newcommand{\highlighttext}{}
\defbeamertemplate*{highlight page}{AU}[1][]
{   \centering
    \vspace{1cm}
    \usebeamerfont{highlight title}\color{titleCol}\highlighttext\par%
}

\mode<all>
